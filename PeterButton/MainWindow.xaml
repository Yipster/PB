<Window x:Class="PeterButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeterButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="530px" Width="800px" WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Key="ClassroomStoryboard" x:Name="ClassroomStoryboard"/>
    </Window.Resources>
    <Canvas x:Name="Container">
        <local:GifImage x:Name="Bird" GifSource="C:\Users\Brandon\Documents\Visual Studio 2015\Projects\PeterButton\PeterButton\Bird.gif"  Height="354" Width="500" Canvas.Left="300" Canvas.Top="121.5"/>
        <Button Style="{StaticResource MyButtonStyle}"  x:Name="ResetBtn" Content="" Height="450" Width="800" Click="ResetBtn_Click" BorderBrush="Black" Foreground="Black" RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="empty classroom.jpg"></ImageBrush>
            </Button.Background>
        </Button>
    </Canvas>
</Window>
